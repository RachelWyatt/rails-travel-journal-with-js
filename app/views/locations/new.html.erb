<h2 class= "ml-5"> Been Somwhere New Recently? </h2><br>
<div class="container p-3">
<div class="row justify-content-md-center">
    <% if @locations %>
        <%@locations.each do |l|%>
            <span class = "border p-3">
            <div class="col col-md-auto ml-md-auto">
                <%=l.name%>
            </div>
            </span>
        <%end%>
      <% end %>
</div>
</div>
<div id ="new_location_container"> </div>

<h2> Create a New Location: </h2>

<div class = "ml-5">

<% if @location.errors.any?%>
    <div class="alert alert-warning" role="alert">
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </div>
<%end%>

<%= form_for @location, url: locations_path do |f|%>
  <div class="form-group" id="location-form">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  <br>
  <%= f.submit 'Create Location', :class => "btn btn-primary" %>
<% end %>
</div>