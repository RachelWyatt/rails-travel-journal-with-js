<h2 class= "ml-5"> Your Trips: </h2>
<div class="container p-3">
<div class="row justify-content-md-center">
<% @trips.each do |t|%>
    <span class = "border p-3">
    <div class="col col-md-auto ml-md-auto">
        <%=link_to "#{t.name}", trip_path(t)%>
    </div>
    </span>
    <br>
<%end%>
</div>
<br>
<h2 class= "ml-5"> Where You've Been: </h2><br>
<div class="container p-3">
<div class="row justify-content-md-center">
    <% if @current_user.user_locations %>
        <%@current_user.user_locations.each do |l|%>
            <span class = "border p-3">
            <div class="col col-md-auto ml-md-auto">
                <%=l%>
            </div>
            </span>
        <%end%>
     <%end%>
<h2 class= "ml-5"> Where To Next? </h2><br>
<div class="container p-3">
<div class="row justify-content-md-center">
     <%= form_for @location, url: locations_path do |f|%>
        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name%>
        </div>
        <br>
        <%= f.submit 'Create Location', :class => "btn btn-primary" %>
    <% end %>
</div>
</div>